<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <!-- Add Bootstrap Icons link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"/>
</head>
<body>
  <%= render 'admin/dashboard/header' %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 bg-light p-3 border-end">
        <h5 class="text-center">Admin Dashboard</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active text-primary" href="/admin">
              <i class="bi bi-house-door"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/admin/products">
              <i class="bi bi-box-seam"></i> Products
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/categories">
              <i class="bi bi-tags"></i> Categories
            </a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="col-md-10">
        <div class="container mt-3">
          <!-- Page Header -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3">Category Listings</h1>
            <%= link_to 'Assign Category', new_admin_category_path, class: 'btn btn-primary' %>
          </div>

          <!-- Category Cards -->
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% @categories.each do |category| %>
              <div class="col">
                <div class="card shadow-sm h-100">
                  <div class="card-body">
                    <h5 class="card-title"><%= category.name %></h5>
                    <p class="card-text text-muted">
                      <%= pluralize(category.products.count, 'product') %> in this category
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
