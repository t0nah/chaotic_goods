<%= render 'header' %>

<div class="container mt-5">
  <!-- Product Title -->
  <h1 class="h3"><%= @products.name %></h1>

  <!-- Product Description -->
  <p class="lead text-muted mb-3"><%= @products.description %></p>

  <!-- Product Details -->
  <div class="mb-2">
    <strong>Brand:</strong> <%= @products.brand %>
  </div>

  <div class="mb-2">
    <strong>Price:</strong> $<%= sprintf('%.2f', @products.price) %>
  </div>

  <div class="mb-2">
    <strong>Category:</strong>
    <%= link_to @products.category.name, product_path(category_url) if @products.category %>
  </div>

  <!-- Add to Cart Button -->
  <div class="mt-4">
    <%= button_to 'Add to Cart', cart_add_path(product_id: @products.id), method: :post, class: 'btn btn-primary btn' %>
  </div>
</div>
