<%= render 'header' %>

<h1>Products</h1>

<div class="products-list">
  <% @products.each do |product| %>
    <div class="product-card card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= link_to product.name, product_path(product) %></h5>
        <p class="card-text text-muted">Price: $<%=product.price %></p>
      </div>
    </div>
  <% end %>
</div>

<div class="container mt-4">
  <% if @products.any? %>
    <h2>Search Results</h2>
    <table class="table table-striped table-bordered align-middle">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.category.name %></td>
            <td>$<%= product.price %></td>
            <td><%= truncate(product.description, length: 100) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No products found.</p>
  <% end %>
</div>

<div class="pagination justify-content-end mt-2"><%= paginate @products %></div>

</div>
