<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"/>

  <style>
    /* Ensure sidebar stretches full height */
    .sidebar {
      min-height: 100vh;
      position: sticky;
      top: 0;
    }
    /* Adjust card sizes */
    .dashboard-card {
      height: 150px; /* Smaller cards */
      display: flex;
      align-items: center;
      justify-content: center;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <%= render 'admin/dashboard/header' %>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 bg-light p-3 border-end sidebar">
        <h5 class="text-center">Admin Dashboard</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active text-primary" href="/admin">
              <i class="bi bi-house-door"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/admin/products">
              <i class="bi bi-box-seam"></i> Products
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/categories">
              <i class="bi bi-tags"></i> Categories
            </a>
          </li>
          <li class="nav-item">
          <%= link_to "Edit About Page", edit_admin_page_path(Page.find_by(title: 'About Us').id), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Edit Contact Page", edit_admin_page_path(Page.find_by(title: 'Contact Us').id), class: "nav-link" %>
        </li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="col-md-10">
        <%= yield %>
        <!-- Dashboard Stats -->
        <div class="container mt-6 pt-5">
          <div class="row mb-3  justify-content-center">
            <div class="col-xl-3 col-sm-6 py-2">
              <div class="card text-white bg-danger dashboard-card">
                <div class="card-body d-flex flex-column">
                  <div class="rotate mb-2">
                    <i class="fa fa-list fa-3x"></i>
                  </div>
                  <h6 class="text-uppercase text-start">Products</h6>
                  <h1 class="display-4 text-start">120</h1>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 py-2">
              <div class="card text-white bg-info dashboard-card">
                <div class="card-body d-flex flex-column">
                  <div class="rotate mb-2">
                    <i class="fa fa-twitter fa-3x"></i>
                  </div>
                  <h6 class="text-uppercase text-start">Categories</h6>
                  <h1 class="display-4 text-start">4</h1>
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-sm-4 py-2">
              <div class="card text-white bg-warning dashboard-card">
                <div class="card-body d-flex flex-column">
                  <div class="rotate mb-2">
                    <i class="fa fa-share fa-3x"></i>
                  </div>
                  <h6 class="text-uppercase text-start">Brands</h6>
                  <h1 class="display-4 text-start">19</h1>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
