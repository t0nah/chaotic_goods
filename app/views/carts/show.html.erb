<div class="container mt-5">
  <h2 class="mb-4">Shopping Cart</h2>

  <% if @cart_items.any? %>
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <tr>
            <td><%= item[:product].name %></td>
            <td><%= number_to_currency(item[:product].price) %></td>
            <td>
              <%= link_to 'Remove', remove_from_cart_path(item[:product]), method: :delete, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mt-3">
      <%= link_to 'Continue Shopping', products_path, class: 'btn btn-secondary' %>
      <%= link_to 'Checkout', checkout_path, class: 'btn btn-primary' %>
    </div>
  <% else %>
    <div class="alert alert-info">Your cart is empty.</div>
    <%= link_to 'Start Shopping', products_path, class: 'btn btn-success' %>
  <% end %>
</div>